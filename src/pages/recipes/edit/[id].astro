---
// src/pages/recipes/edit/[id].astro
// This page will be a static shell for the client-side Svelte form.
// No getStaticPaths needed here.
export const prerender = false; // <--- ADD THIS LINE!

import RecipeForm from '../../../components/RecipeForm.svelte'; // Adjust path as needed

// Get the recipe ID from the URL parameters
const { id } = Astro.params;

// No server-side fetch here for initial recipe data; Svelte component will do it.
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{id ? `Edit Recipe ${id}` : 'Edit Recipe'} - My Recipe App</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-6">
        <a href={id ? `/recipes/${id}` : '/'} class="btn btn-ghost mb-4">‚Üê Back to Recipe</a>

        <h1 class="text-4xl font-bold text-center text-blue-600 mb-8">
            {id ? `Edit: Recipe ${id}` : 'Edit Recipe'}
        </h1>

        <RecipeForm recipeId={id} client:load />
    </div>
</body>
</html>